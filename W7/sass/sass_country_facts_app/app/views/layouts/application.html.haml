!!!
%html
  %head
    %title CountryFacts
    = stylesheet_link_tag "application", :media => "all"
    /
      </haml:block><haml:silent>
      </haml:silent><haml:block>
      </haml:block><haml:silent></haml:silent><haml:block>
    = javascript_include_tag "application"
    = javascript_include_tag "bootstrap"
    = csrf_meta_tags
    %link{:href => "http://fonts.googleapis.com/css?family=Josefin+Slab:300,400,700", :rel => "stylesheet", :type => "text/css"}
      %link{:href => "http://fonts.googleapis.com/css?family=Lato:400,900", :rel => "stylesheet", :type => "text/css"}
  %body
    #wrapper
      %nav
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li= link_to "All Countries", '/'
            - @continents.each do |continent|
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}= continent.name
                %ul.dropdown-menu
                  - continent.countries.each do |country|
                    %li= link_to "#{country.name}", country_path(country)
                  %li= link_to "Add Country", new_country_path
            %li= link_to "Add Continent", new_continent_path
      = yield